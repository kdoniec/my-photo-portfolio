---
import { LoginForm } from "@/components/admin/auth/LoginForm";
import { SessionExpiredBanner } from "@/components/admin/auth/SessionExpiredBanner";
import "@/styles/global.css";

const user = Astro.locals.user;

// Redirect if already logged in (middleware handles this, but double-check)
if (user) {
  return Astro.redirect("/admin/photos");
}

// Get query parameters
const returnTo = Astro.url.searchParams.get("returnTo") || undefined;
const expired = Astro.url.searchParams.get("expired") === "true";
const passwordReset = Astro.url.searchParams.get("password_reset") === "true";
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Logowanie - Panel Administracyjny</title>
  </head>
  <body class="min-h-screen bg-background">
    <div class="flex min-h-screen items-center justify-center px-4">
      <div class="w-full max-w-md space-y-6">
        <div class="space-y-2 text-center">
          <h1 class="text-3xl font-bold">Panel Administracyjny</h1>
          <p class="text-muted-foreground">Zaloguj się, aby zarządzać portfolio</p>
        </div>

        {expired && <SessionExpiredBanner show={true} client:load />}

        {
          passwordReset && (
            <div class="rounded-lg border border-green-500 bg-green-50 p-4 text-sm text-green-800 dark:bg-green-950 dark:text-green-200">
              Hasło zostało zmienione. Możesz się teraz zalogować.
            </div>
          )
        }

        <div class="rounded-lg border bg-card p-6 shadow-sm">
          <LoginForm client:only="react" returnTo={returnTo} showExpiredMessage={expired} />
        </div>

        <div class="text-center">
          <a
            href="/admin/reset-password"
            class="text-sm text-muted-foreground underline-offset-4 hover:text-primary hover:underline"
          >
            Nie pamiętam hasła
          </a>
        </div>
      </div>
    </div>
  </body>
</html>
