---
import { ForgotPasswordForm } from "@/components/admin/auth/ForgotPasswordForm";
import "@/styles/global.css";

const user = Astro.locals.user;

// Redirect if already logged in
if (user) {
  return Astro.redirect("/admin/photos");
}
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Resetowanie hasła - Panel Administracyjny</title>
  </head>
  <body class="min-h-screen bg-background">
    <div class="flex min-h-screen items-center justify-center px-4">
      <div class="w-full max-w-md space-y-6">
        <div class="space-y-2 text-center">
          <h1 class="text-3xl font-bold">Resetowanie hasła</h1>
          <p class="text-muted-foreground">Podaj adres email, a wyślemy Ci link do zresetowania hasła</p>
        </div>

        <div class="rounded-lg border bg-card p-6 shadow-sm">
          <ForgotPasswordForm client:only="react" />
        </div>

        <div class="text-center">
          <a
            href="/admin/login"
            class="text-sm text-muted-foreground underline-offset-4 hover:text-primary hover:underline"
          >
            &larr; Wróć do logowania
          </a>
        </div>
      </div>
    </div>
  </body>
</html>
