---
import { SetPasswordForm } from "@/components/admin/auth/SetPasswordForm";
import "@/styles/global.css";
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ustaw nowe hasło - Panel Administracyjny</title>
  </head>
  <body class="min-h-screen bg-background">
    <div class="flex min-h-screen items-center justify-center px-4">
      <div class="w-full max-w-md space-y-6">
        <div class="space-y-2 text-center">
          <h1 class="text-3xl font-bold">Ustaw nowe hasło</h1>
          <p class="text-muted-foreground">Wprowadź nowe hasło dla swojego konta</p>
        </div>

        <div class="rounded-lg border bg-card p-6 shadow-sm">
          <SetPasswordForm client:only="react" />
        </div>

        <div class="text-center">
          <a
            href="/admin/login"
            class="text-sm text-muted-foreground underline-offset-4 hover:text-primary hover:underline"
          >
            &larr; Wróć do logowania
          </a>
        </div>
      </div>
    </div>
  </body>
</html>
