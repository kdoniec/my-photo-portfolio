---
import "../styles/global.css";
import SEOHead from "../components/seo/SEOHead.astro";
import PublicNavbar from "../components/navigation/PublicNavbar";
import type { PublicProfileDTO } from "@/types";

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
}

const { title, description, ogImage } = Astro.props;
const currentPath = Astro.url.pathname;

// Fetch photographer name from API
let photographerName = "Portfolio";
try {
  const response = await fetch(`${Astro.url.origin}/api/public/profile`);
  if (response.ok) {
    const profile: PublicProfileDTO = await response.json();
    photographerName = profile.display_name || "Portfolio";
  }
} catch (error) {
  console.error("Failed to fetch photographer profile:", error);
}

// Build full page title
const pageTitle = title ? `${title} | ${photographerName}` : photographerName;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <SEOHead title={pageTitle} description={description} ogImage={ogImage} />
  </head>
  <body class="min-h-screen flex flex-col">
    <PublicNavbar client:load photographerName={photographerName} currentPath={currentPath} />
    <main class="flex-1">
      <slot />
    </main>
    <footer class="border-t border-border bg-background py-6">
      <div class="container mx-auto px-4">
        <p class="text-center text-sm text-muted-foreground">
          &copy; {new Date().getFullYear()}
          {photographerName}. Wszystkie prawa zastrze≈ºone.
        </p>
      </div>
    </footer>
  </body>
</html>
