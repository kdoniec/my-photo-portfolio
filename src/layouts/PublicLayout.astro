---
import "../styles/global.css";
import SEOHead from "../components/seo/SEOHead.astro";
import Navigation from "../components/navigation/Navigation.astro";

interface Props {
  title: string;
  siteName: string;
  description?: string;
  ogImage?: string;
  canonicalUrl?: string;
}

const { title, siteName, description, ogImage, canonicalUrl } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <SEOHead title={title} description={description} ogImage={ogImage} canonicalUrl={canonicalUrl} />
  </head>
  <body class="min-h-screen flex flex-col">
    <Navigation siteName={siteName} currentPath={currentPath} />
    <main class="flex-1">
      <slot />
    </main>
    <footer class="border-t border-border bg-background py-6">
      <div class="container mx-auto px-4">
        <p class="text-center text-sm text-muted-foreground">
          &copy; {new Date().getFullYear()}
          {siteName}. Wszystkie prawa zastrze≈ºone.
        </p>
      </div>
    </footer>
  </body>
</html>
